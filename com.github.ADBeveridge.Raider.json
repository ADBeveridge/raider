{
    "app-id" : "com.github.ADBeveridge.Raider",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "raider",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=host",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "blueprint-compiler",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "commit" : "66b43c36cf1017c878762007373964a096b3d2a5"
                }
            ]
        },
        {
            "name" : "raider",
            "builddir" : true,
            "buildsystem" : "meson",
            "run-tests": true,
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "./"
                }
            ]
        }
    ]
}