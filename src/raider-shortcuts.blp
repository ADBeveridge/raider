using Gtk 4.0;

ShortcutsWindow help_overlay {
  modal: true;

  ShortcutsSection {
    ShortcutsGroup {
      title: _("General");
      ShortcutsShortcut {
        action-name: "app.open";
        title: _("Add Files");
      }
      ShortcutsShortcut {
        action-name: "app.new-window";
        title: _("New Window");
      }
      ShortcutsShortcut {
        action-name: "win.show-help-overlay";
        title: _("Keyboard Shortcuts");
      }
      ShortcutsShortcut {
        action-name: "app.close";
        title: _("Close Window");
      }
      ShortcutsShortcut {
        action-name: "app.quit";
        title: _("Quit");
      }
    }
  }
}
